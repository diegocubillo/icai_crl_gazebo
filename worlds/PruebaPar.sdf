<?xml version="1.0" ?>
<sdf version="1.7">
  <world name="World">
    <!-- Physics definition -->
    <physics name="1ms" type="ignored">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>

    <!-- Physics plugin -->
    <plugin
      filename="libignition-gazebo-physics-system.so"
      name="ignition::gazebo::systems::Physics">
    </plugin>

    <!-- Creating, moving and deleting models plugin -->
    <plugin
      filename="libignition-gazebo-user-commands-system.so"
      name="ignition::gazebo::systems::UserCommands">
    </plugin>

    <!-- Shows the world scene -->
    <plugin
      filename="libignition-gazebo-scene-broadcaster-system.so"
      name="ignition::gazebo::systems::SceneBroadcaster">
    </plugin>

    <!-- IMU plugin -->
    <plugin 
      filename="libignition-gazebo-imu-system.so"
      name="ignition::gazebo::systems::Imu">
    </plugin>

    <!-- sensors plugin -->
    <plugin
      filename="libignition-gazebo-sensors-system.so"
      name="ignition::gazebo::systems::Sensors">
    </plugin>

    <!-- Torque sensors plugin -->
    <plugin
      filename="ignition-gazebo-forcetorque-system"
      name="ignition::gazebo::systems::ForceTorque">
    </plugin>
    
    <!-- GUI configuration -->
    <gui fullscreen="0">
      <!-- 3D scene -->
      <plugin filename="GzScene3D" name="3D View">
        <ignition-gui>
          <title>3D View</title>
          <property type="bool" key="showTitleBar">true</property>
          <property type="string" key="state">docked</property>
        </ignition-gui>

        <engine>ogre2</engine>
        <scene>scene</scene>
        <ambient_light>1.0 1.0 1.0</ambient_light>
        <background_color>0.8 0.8 0.8</background_color>
        <camera_pose>-6 0 6 0 0.5 0</camera_pose>
      </plugin>

      <!-- World control -->
      <plugin filename="WorldControl" name="World control">
        <ignition-gui>
          <title>World control</title>
            <property type="bool" key="showTitleBar">false</property>
            <property type="bool" key="resizable">false</property>
            <property type="double" key="height">72</property>
            <property type="double" key="width">121</property>
            <property type="double" key="z">1</property>

            <property type="string" key="state">floating</property>
            <anchors target="3D View">
            <line own="left" target="left"/>
            <line own="bottom" target="bottom"/>
            </anchors>
        </ignition-gui>

        <play_pause>true</play_pause>
        <step>true</step>
        <start_paused>true</start_paused>
        <service>/world/world_demo/control</service>
        <stats_topic>/world/world_demo/stats</stats_topic>
      </plugin>

      <!-- World statistics -->
      <plugin filename="WorldStats" name="World stats">
        <ignition-gui>
            <title>World stats</title>
            <property type="bool" key="showTitleBar">false</property>
            <property type="bool" key="resizable">false</property>
            <property type="double" key="height">110</property>
            <property type="double" key="width">290</property>
            <property type="double" key="z">1</property>

            <property type="string" key="state">floating</property>
            <anchors target="3D View">
            <line own="right" target="right"/>
            <line own="bottom" target="bottom"/>
            </anchors>
        </ignition-gui>

        <sim_time>true</sim_time>
        <real_time>true</real_time>
        <real_time_factor>true</real_time_factor>
        <iterations>true</iterations>
        <topic>/world/world_demo/stats</topic>
      </plugin>

      <!-- Entity tree -->
      <!-- <plugin filename="EntityTree" name="Entity tree">
      </plugin> -->

      <!-- Topic viewer-->
      <plugin filename="TopicViewer" name="Topic viewer">
      </plugin>

      <!-- Plotting-->
      <plugin filename="Plotting" name="Plotting">
      </plugin>
    </gui>

    <!-- Light definition -->
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <!-- Ground plane -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
      </link>
    </model>


    <!-- Simple pendulum model -->
    <model name="Pendulum">
      <link name="base">
        <pose>0 0.1 1 0 0 0</pose>
        <visual name="base_visual">
          <geometry>
            <box><size>0.1 2 2</size></box>
          </geometry>
          <material>
            <ambient>0 0.8 0 1</ambient>
            <diffuse>0 0.8 0 1</diffuse>
            <specular>0 0.8 0 1</specular>
          </material>
        </visual>

        <collision name="base_collision">
          <geometry>
            <box><size>0.1 2 2</size></box>
          </geometry>
        </collision>

        <inertial>
          <mass>1</mass>
          <inertia>
            <ixx>1</ixx>
            <iyy>1</iyy>
            <izz>1</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Pendulum arm -->
      <link name="arm">
        <pose>-0.3 0 1.5 0.7854 0 0</pose>
        <visual name="arm_visual">
          <pose>0 0 -0.5 0 0 0</pose>
          <geometry>
            <box><size>0.1 0.1 1</size></box>
          </geometry>
          <material>
            <ambient>0 0 0.8 1</ambient>
            <diffuse>0 0 0.8 1</diffuse>
            <specular>0 0 0.8 1</specular>
          </material>
        </visual>

        <collision name="arm_collision">
          <pose>0 0 -0.5 0 0 0</pose>
          <geometry>
            <box><size>0.1 0.1 1</size></box>
          </geometry>
        </collision>

        <inertial>
          <pose>0 0 -1.0 0 0 0</pose>
          <mass>1.0</mass>
          <inertia>
            <ixx>0.1</ixx>
            <ixy>0.0</ixy>
            <ixz>0.0</ixz>
            <iyy>0.1</iyy>
            <iyz>0.0</iyz>
            <izz>0.1</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Flywheel -->
      <link name="flywheel">
        <pose degrees="true">0.3 0 1.5 90 0 0</pose>
        <visual name="flywheel_visual">
          <geometry>
            <cylinder>
              <radius>0.05</radius>
              <length>0.026</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.8 0 0 1</ambient>
            <diffuse>0.8 0 0 1</diffuse>
            <specular>0.8 0 0 1</specular>
          </material>
        </visual>

        <collision name="flywheel_collision">
          <geometry>
            <cylinder>
              <radius>0.05</radius>
              <length>0.026</length>
            </cylinder>
          </geometry>
        </collision>

        <inertial>
          <mass>0.120</mass>
          <inertia>
            <ixx>0.000102</ixx>
            <iyy>0.000204</iyy>
            <izz>0.000102</izz>
          </inertia>
        </inertial>
      </link>

      <joint name="ground_fixed" type="fixed">
        <parent>world</parent>
        <child>base</child>
      </joint>

      <joint name="arm_joint" type="revolute">
        <parent>base</parent>
        <child>arm</child>
        <axis>
          <xyz expressed_in="arm">1 0 0</xyz>
          <limit>
              <lower>-1.79769e+308</lower>    <!-- negative infinity -->
              <upper>1.79769e+308</upper>     <!-- positive infinity -->
          </limit>
          <dynamics>
            <friction>0.0732352</friction>
            <damping>0.000931</damping>
          </dynamics>
        </axis>

        <sensor name='force_torque' type='force_torque'>
          <!-- <pose relative_to="__model__">0 0 0 0 0 0</pose> -->
          <always_on>true</always_on>
          <topic>/torque_sensor</topic>
          <update_rate>30</update_rate>
          <force_torque>
            <frame>sensor</frame>
            <measure_direction>child_to_parent</measure_direction> <!-- <measure_direction>parent_to_child</measure_direction> -->
          </force_torque>
        </sensor>
      </joint>

      <joint name="flywheel_joint" type="revolute">
        <pose relative_to="flywheel"/>
        <parent>base</parent>
        <child>flywheel</child>
        <axis>
          <xyz expressed_in="__model__">0 1 0</xyz>
          <dynamics>
            <friction>0.0732352</friction>
            <damping>0.000931</damping>
          </dynamics>
          <limit>
              <lower>-1.79769e+308</lower>    <!-- negative infinity -->
              <upper>1.79769e+308</upper>     <!-- positive infinity -->
          </limit>
        </axis>
      </joint>

      <!-- <plugin
        filename="MyApplyJointForce"
        name="ignition::gazebo::systems::MyApplyJointForce">
        <joint_name>arm_joint</joint_name>
        <link_name>arm</link_name> -->
        <!-- <topic>/torque</topic> -->
        <!-- <initial_torque>6.9296</initial_torque>
        <initial_torque>0</initial_torque> -->
      <!-- </plugin> -->
      <plugin filename="md25_plugin_o1"
        name="icai_crl_gazebo::MD25PluginO1">
        <left_joint>arm_joint</left_joint>
        <right_joint>flywheel_joint</right_joint>
        <encoder_rate>10</encoder_rate>
      </plugin>

    </model>

